NODE_ENV=development


DB_HOST=localhost
DB_USERNAME=root
DB_PASSWORD=
DB_NAME=expressapi
DB_NAME_TEST=expressapi_db_test
PORT=3000
JWT_SECRET=your-super-strong-secret-key-for-jwt-should-be-very-long
JWT_EXPIRES_IN=86400  # 24 hours in seconds

# Logging configuration
LOG_LEVEL=debug                  # debug, info, warn, error
LOG_FORMAT=dev                   # dev or combined
LOG_DIR=logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d
LOG_FILE_NAME=app-%DATE%.log
ERROR_FILE_NAME=error-%DATE%.log
ACCESS_LOG_FILE_NAME=access-%DATE%.log

# Development specific
DEV_SHOW_ERRORS=true            # Show detailed error messages
DEV_ENABLE_REQUEST_LOGGING=true # Enable detailed request logging

# Production specific
PROD_LOG_LEVEL=info
PROD_LOG_FORMAT=combined
PROD_SHOW_ERRORS=false

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
ENABLE_SECURITY_HEADERS=true

# Rate Limiting Configuration
# RATE_LIMIT_AUTH_MAX=5
# RATE_LIMIT_AUTH_WINDOW_MS=900000  # 15 minutes in milliseconds
# RATE_LIMIT_ROLES_MAX=50
# RATE_LIMIT_ROLES_WINDOW_MS=3600000  # 1 hour in milliseconds